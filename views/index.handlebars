<h1>Winter Vocation Study Plan</h1>

 <img src ="image/giphy.gif"  class="center" id="frog" >  
<div>
  <div class=column>


    <h2>Subject need to be catched up!!</h2>

    <ul>
      {{#each plans}}
      {{#unless finish}}
      {{> plans/plan-block finish=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class=column>
    <h2>Add a subject</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Subject</label>
        <input type="text" id="ca" name="subject">
      </div>

      <button id="submit" type="submit">Add Subject</button>
    </form>
  </div>
  <div class=column>
    <h2>Subject that are finished!</h2>

    <ul>
      {{#each plans}}
      {{#if finish}}
      {{> plans/plan-block finish=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>





</div>